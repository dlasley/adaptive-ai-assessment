# Anthropic API Key
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# Feature Flags (set to 'true' to enable)
# Anonymous Study Code System
NEXT_PUBLIC_ENABLE_STUDY_CODES=false
NEXT_PUBLIC_ENABLE_ADMIN_PANEL=false
NEXT_PUBLIC_ENABLE_DB_SYNC=false
NEXT_PUBLIC_ENABLE_PROGRESS_TRACKING=false

# Writing Evaluation Mode
# false = Use fuzzy logic first, Claude API only when needed (cost-efficient)
# true = Always use Claude API for maximum accuracy (recommended for tests/assessments)
NEXT_PUBLIC_API_ONLY_EVALUATION=false

# Supabase Configuration (only needed if DB_SYNC is enabled)
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Admin Authentication (only needed if ADMIN_PANEL is enabled)
# ADMIN_PASSWORD=your_secure_password
